<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="400.0" prefWidth="601.0" style="-fx-background-color: #050c16; color: #fff;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="engine.Engine">

    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <Text fill="WHITE" style="-fx-font-size: 20pt;" text="The game" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>


    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <Text fill="WHITE" style="-fx-font-size: 14pt;" text="Tell me something in the next" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
            <GridPane.margin>
                <Insets top="30.0" />
            </GridPane.margin>
        </Text>
        <Text fill="WHITE" style="-fx-font-size: 14pt;" text="minute(s)" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="0">
            <GridPane.margin>
                <Insets top="30.0" />
            </GridPane.margin>
        </Text>
      <Spinner fx:id="timeSpinner" min="1" max="999" prefHeight="27.0" prefWidth="89.0" style="-fx-background-color: transparent;" GridPane.columnIndex="2">
         <GridPane.margin>
            <Insets top="30.0" />
         </GridPane.margin>
      </Spinner>
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
      <Button fx:id="toggleButton" mnemonicParsing="false" onAction="#toggleButtonHandler" text="Start" GridPane.columnIndex="0">
         <GridPane.margin>
            <Insets top="30.0" />
         </GridPane.margin>
      </Button>
      <Button fx:id="closeButton" mnemonicParsing="false" onAction="#closeButtonHandler" text="Close" GridPane.columnIndex="1">
         <GridPane.margin>
            <Insets top="30.0" />
         </GridPane.margin></Button>
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <Text fx:id="timerLabel" fill="WHITE" style="-fx-font-size: 14pt;" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets top="150.0" />
            </GridPane.margin>
        </Text>
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>


</VBox>
